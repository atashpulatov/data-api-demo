job 'stage-2-codeql' do
  description 'The stage 2 ghas codeql scan'

  configure_common_items{}

  assigned_node_string 'rhel8_vra'

  triggers do
    scm_polling do
      minute 'H'
      hour 'H'
      month '*'
      day_of_week '0'
      day_of_month '*'
    end
  end


  
  builders do
    bash do
      script '#!/usr/bin/env bash
set +xe

export PATH=/usr/local/sbin:/usr/local/bin:$PATH

export WORKSPACE_SETTING=aws_dev

source .ecosystem
export HATS=$HATS:rallytask
rake pre_pipeline
rake ghas_code_scan_start[\'javascript,ruby\']
source $PATHS_PROJECT_HOME/start-tracing
rake build
rake ghas_code_scan_end
rake post_pipeline
'
    end
  end



end