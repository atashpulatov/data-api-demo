job 'stage-2-e2e-browser-test' do
  description 'run browser based e2e test for excel plugin'

  configure_common_items{}

  properties do
    parameters do
      upstream_parameter do
        upstream_job_name 'stage-1-dev'
        name 'APPLICATION_VERSION'
        description 'the version of the application to deploy and test'
      end

      upstream_parameter do
        upstream_job_name 'stage-1-dev'
        name 'APPLICATION_COMMIT_HASH'
        description 'the git commit hash paired with the application version (tip: choose the same list item index as the application version)'
      end
    end
  end

  scm do
    git do
      commit_hash '${APPLICATION_COMMIT_HASH}'
    end
  end

  assigned_node_string 'mstr-office-tes'

  builders do
    bash do
      script '#!/usr/bin/env bash
set +xe

export PATH=/usr/local/sbin:/usr/local/bin:$PATH
export TERM_PROGRAM=iTerm.app
export WORKSPACE_SETTING=mac_test

source .ecosystem

rake deploy_tester_server[$APPLICATION_VERSION]
rake e2e_test_browser
'
    end
  end

  publishers do
    # html do
    #   report_name 'Vagrant Logs'
    #   report_directory_path "deploy/vagrant/esxi/test/logs"
    #   index_file_name 'index.html'
    # end
    #
    # cucumber do
    #   file_include_pattern 'acceptance_test.json'
    # end

   
  end

end
