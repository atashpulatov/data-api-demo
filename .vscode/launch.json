{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "https://localhost:3000",
            "webRoot": "${workspaceRoot}/webpack-front-end/src/frontend/app",
            "sourceMaps": true
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceFolder}/front-end/public"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome with WebPack",
            "port": 9222,
            "webRoot": "${workspaceRoot}/webpack-front-end/src/frontend/app",
            "sourceMaps": true
        },

        {
            "type": "node",
            "request": "launch",
            "name": "WebpackDEV",
            "program": "${workspaceRoot}/webpack-front-end/node_modules/.bin/webpack-dev-server",
            "args":[
                "--https",
                "--port",
                "3000"
            ],
            "outFiles": [
                "${workspaceRoot}/webpack-front-end/src/frontend/public/js/*"
            ],
            // "stopOnEntry": false,
            "cwd": "${workspaceFolder}/webpack-front-end",
            "console": "internalConsole",
            "sourceMaps": true
        },

        {
            "type": "node",
            "request": "launch",
            "name": "DevExperimental",
            //"program": "${workspaceFolder}/webpack-front-end",
            "stopOnEntry": false,
            "outFiles": [
                "${workspaceRoot}/webpack-front-end/src/frontend/public/js/*"
            ],
            "args": [],
            "cwd": "${workspaceFolder}/webpack-front-end",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "start-dev"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "port": 9229
        
        }

    ]
}