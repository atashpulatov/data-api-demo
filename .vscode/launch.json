{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "WebpackDEV",
            "program": "${workspaceRoot}/webpack-front-end/node_modules/.bin/webpack-dev-server",
            "args":[
                "-d",
                "--content-base",
                "src/frontend/public",
                "--watch"
            ],
            // "outFiles": [
            //     "${workspaceRoot}/webpack-front-end/public/js/*"
            // ],
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}/webpack-front-end/",
            "runtimeExecutable": null,
            "runtimeArgs": [],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "internalConsole",
            "sourceMaps": true,

        },
        {
            "name": "Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "https://localhost:3000",
            "webRoot": "${workspaceRoot}/src"
        }
    ]
}