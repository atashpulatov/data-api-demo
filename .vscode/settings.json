{
  "eslint.workingDirectories": [
    {
      "directory": "./production",
      "changeProcessCWD": true
    },
    {
      "directory": "./tests/integration/test-driver-browser",
      "changeProcessCWD": true
    }
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "html",
    "typescript",
    "typescriptreact"
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "prettier.ignorePath": "production/.prettierignore",

  "terminal.integrated.cwd": "./production"
}
